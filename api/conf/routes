# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


#Add custom API
GET   /weather              controllers.WeatherController.getWeatherForCity(city="")
GET   /forecast             controllers.WeatherForecastController.getForecastForCity(id="")

GET   /cities               controllers.CitiesAPIController.getCitySuggestions(city="")

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
