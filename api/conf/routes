# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~


#Add custom API
GET   /weather              controllers.WeatherController.getWeatherForCity()
GET   /single-weather       controllers.WeatherController.getSingleWeatherForCity()
GET   /forecast             controllers.WeatherForecastController.getForecastForCity()
GET   /raw-forecast         controllers.WeatherForecastController.getRawForecastForCity()
GET   /user-info            controllers.AuthController.getUserInfo()
GET   /authenticate         controllers.AuthController.authenticate()
GET   /logout               controllers.AuthController.logout()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
